<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300" creationComplete="initComponet(event)" >
	<fx:Script>
		<![CDATA[
			import mx.events.FlexEvent;
			
			protected function initComponet(event:FlexEvent):void
			{
			// TODO Auto-generated method stub
			this.useHandCursor = true
			this.buttonMode = true
			//this.horizontalAlign="center"
			source = 'file://'+File.applicationDirectory.nativePath+'/assets/settings.png'
			
			}
			public function set source(value:String):void
			{
			
			img.source = value
			
			}
	
	]]>
	</fx:Script>
	<s:TextArea width="20" 
				height="20" borderColor="#000000" color="#000000"
				contentBackgroundColor="#726B6B" editable="false" selectable="false" />
	<s:BitmapImage id="img" width="100%" height="100%" smooth="true" smoothingQuality="high" />
	
</s:Group>
